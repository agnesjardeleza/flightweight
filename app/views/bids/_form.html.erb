<%= form_for :bid, url: bids_path do |f| %>
  
  <p>
    <%= f.label :weight_to_be_used %><br>
    <%= f.number_field :weight_to_be_used %>
  </p>
 
  <p>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </p>
 
  <p>
    <%= f.label :ticket_id %><br>
    <%= f.text_field :ticket_id %>
  </p>

  <%= hidden_field_tag :post_id, @post.id %>

 <p>
    <%= f.submit %>
  </p>
 
<% end %>
 

