
<div class="row">
  <div class="col-md-8 add-bid">
  <!-- <div class="col-md-8"><br>   -->
<%= form_for :bid, url: bids_path do |f| %>
  
  <p>
    <%= f.label 'Weight: ' %>
    <%= f.number_field :weight_to_be_used %>
  </p>
 
  <p>
    <%= f.label 'Details: ' %>
    <%= f.text_area :details %>
  </p>
 
  <p>
    <%= f.label 'Flight Number: ' %>
    <%= f.text_field :flight_number %>
  </p>

  <%= hidden_field_tag :post_id, @post.id %>

 <div class="pull-right"><br> 
  <%= button_tag 'Submit', :type=>'submit', :class=>'btn btn-primary'%>
  </div>
 
<% end %>
 </div>
 </div>

