<div class="container-fluid">


  <%= form_tag({controller: 'searches', action: 'search_flight_number'}, method: 'get') do %>
      <div class="form-group">
      <%= label_tag :flight_number %><br>
      <%= text_field_tag :flight_number, nil, placeholder: 'Flight number', class: 'form-control' %>
      </div>
      <button type ="submit" class="btn btn-default pull-right">Search</button>
  <% end %> 

</div>
<div class="container-fluid">
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">To</label>
    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Destination">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">From</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Origin">
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">Date</label>
    <%= text_field_tag :date, nil, :data => {:provide => "datepicker"}, class: 'form-control' %>
  </div>

  <button type="submit" class="btn btn-default pull-right">Search</button>
</form>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>