
<div class="row">
  <div class="col-md-8 add-bid">

<%= form_for @comment do |f| %>
	<%= f.hidden_field :user_id, value: @user.id, class: "form-control" %>
	<%= f.hidden_field :commenter_id, value: current_user.id, class: "form-control" %>
	
	<%= f.label 'Comment:' %><br>
	<%= f.text_area :comment, value: @comment.comment, class: "form-control"%><br>
	
	<div class="pull-right"><br> 
  <%= button_tag 'Comment', :type=>'submit', :class=>'btn btn-primary'%>
  </div>
<% end %>

</div></div>