<%= form_tag :role=>'form', :action=>'create' do %>

	<div class="row">
	<!-- <div class="col-md-4"></div> -->
  <div class="col-md-4"><br>  
	<%#= label :user, 'Username: ' %>

	<h4>Account Information</h4>
	<%= text_field :user, :username, :value=>@username, :placeholder=>"Username", class: "form-control" %>
	<!-- </div> -->
	<br>

  <!-- <div class="col-md-8"><br>   -->
	<%#= label :user, 'Password: ' %>
	<%= password_field :user, :password, :placeholder=>'Password', class: "form-control"%>
	<!-- </div> -->
	<br>

	<!-- <div class="col-md-8"><br>   -->
	<%#= label :user, 'Confirm Password: ' %>
	<%= password_field :user, :password_confirmation, :placeholder=>'Confirm password', class: "form-control"%>
	<!-- </div> -->
	<br>

	<%= hidden_field :user, :role, :value=>'regular' %>

	<!-- <div class="col-md-8"><br>   -->
	<%#= label :person, 'First Name: ' %>
	<!-- <div class="form-inline"> -->
	<h4>Personal Details</h4>
	<%= text_field :person, :first_name, :placeholder=>'First name',class: "form-control" %>
	<br>
	<%= text_field :person, :mid_name, :placeholder=>'Middle name',class: "form-control" %>
	<br>
	<%= text_field :person, :last_name, :placeholder=>'Last name',class: "form-control" %>
	<!-- </div> -->
	<br>
	
	<%= text_field :person, :address, :placeholder=>'Address',class: "form-control" %>
	<br>

	<%= text_field :person, :contact_num, :placeholder=>'Contact number',class: "form-control" %>
	<br>
	
	<%= text_field :person, :email, :placeholder=>'Email',class: "form-control" %>
	<br>

	<div class="pull-right"><br> 
	<%= button_tag 'Create Account', :type=>'submit', :class=>'btn btn-primary'%>
	</div>
	</div>
<% end %>
