
<%= form_for :post, url: posts_path do |f| %>
  
  <p>
    <%= f.label :weight %><br>
    <%= f.number_field :weight %>
  </p>
 
  <p>
    <%= f.label :date_of_flight %><br>
    <%= text_field_tag :date, nil, :value => @dof_str, :data => {:provide => "datepicker"}, class: 'form-control' %>
    
  </p>

  <p>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </p>

   <p>
   <%= f.label :category %><br>
   <%= f.select(:category, [['Request','request'],['Advertisement','advertisement']])  %>
  </p>
  
  <p>
    <%= f.label :ticket_id %><br>
    <%= f.text_field :ticket_id %>
  </p>


 <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
